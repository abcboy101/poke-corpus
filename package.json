{
  "name": "poke-corpus",
  "version": "0.1.0",
  "homepage": "https://abcboy101.github.io/poke-corpus",
  "type": "module",
  "private": true,
  "dependencies": {
    "compression-streams-polyfill": "^0.1.7",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-resources-to-backend": "^1.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-i18next": "^15.7.3"
  },
  "scripts": {
    "ci": "npm run lint && vitest run",
    "predeploy": "npm run pull && npm run hash && npm run ci && npm run build",
    "deploy": "gh-pages -d dist",
    "start": "npm run hash && vite",
    "build": "tsc -b && vite build && npm run build:ssr && npm run build:minify",
    "build:ssr": "npx tsx gen-static.ts",
    "build:minify": "minify dist/index.ssr.html > dist/index.min.html && python scripts/run_minify.py",
    "serve": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage --watch=false",
    "lint": "eslint && stylelint \"**/*.css\"",
    "pull": "python scripts/remote_go.py && python scripts/remote_home.py && python scripts/remote_masters.py",
    "hash": "python scripts/gzip_files.py && python scripts/update_hash.py && python scripts/corpus_json.py",
    "update": "npx update-browserslist-db@latest && npx npm-check-updates -u && npm install"
  },
  "browserslist": {
    "production": [
      "defaults and fully supports es6-module"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@csstools/postcss-light-dark-function": "^2.0.10",
    "@eslint/js": "^9.34.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/web-worker": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "browserslist-to-esbuild": "^2.1.1",
    "eslint": "^9.34.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.0.0-rc.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "minify": "^14.1.0",
    "postcss": "^8.5.6",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vite-plugin-eslint2": "^5.0.4",
    "vite-plugin-pwa": "^1.0.3",
    "vite-plugin-stylelint": "^6.0.2",
    "vitest": "^3.2.4"
  }
}
